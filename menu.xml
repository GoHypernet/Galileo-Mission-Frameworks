<?xml version="1.0" encoding="utf-8"?>
<openbox_menu xmlns="http://openbox.org/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://openbox.org/ file:///usr/share/openbox/menu.xsd">
    <menu id="root-menu" label="Openbox 3">
        <item label="Rapid Miner">
            <action name="Execute">
                <execute>bash /rapidminer-studio/RapidMiner-Studio.sh</execute>
            </action>
        </item>
		<item label="Minimize RapidMiner">
            <action name="Execute">
                <execute>/usr/bin/wmctrl -r RapidMiner -b add,hidden</execute>
            </action>
        </item>
		<item label="Restore RapidMiner">
            <action name="Execute">
                <execute>/usr/bin/wmctrl -r RapidMiner -b remove,hidden</execute>
            </action>
        </item>
        <item label="Terminal">
            <action name="Execute">
                <execute>/usr/bin/xterm</execute>
            </action>
        </item>
        <item label="Htop">
            <action name="Execute">
                <execute>/usr/bin/xterm -e htop</execute>
            </action>
        </item>
    </menu>
</openbox_menu>